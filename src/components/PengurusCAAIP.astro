---
import { getCollection } from 'astro:content';

// Fetch pengurus data from content collection
const allPengurus = await getCollection('pengurus');
// Sort by order field
const pengurusList = allPengurus.sort((a, b) => a.data.order - b.data.order);
---

<div class="pengurus-container sticky top-24">
  <div class="pengurus-card bg-white rounded-xl shadow-sm border border-slate-200/60 overflow-hidden">
    <!-- Header Section - Minimalist -->
    <div class="header-section px-6 py-4 border-b border-slate-100">
      <div class="flex items-center gap-2.5">
        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
        </svg>
        <h3 class="text-base font-semibold text-slate-700 tracking-tight">Pengurus CAAIP</h3>
      </div>
    </div>

    <!-- Pengurus List -->
    <div class="pengurus-list p-5 space-y-5">
      {pengurusList.map((item, index) => (
        <div class="pengurus-item group">
          <div class="flex flex-col items-center text-center space-y-3.5 p-4 rounded-lg transition-all duration-300 hover:bg-slate-50/50">
            
            <!-- Photo with Modern Frame -->
            <div class="photo-wrapper relative">
              <!-- Subtle background decoration -->
              <div class="absolute inset-0 bg-slate-100 rounded-2xl -rotate-3 opacity-40 group-hover:rotate-3 transition-transform duration-500"></div>
              <div class="absolute inset-0 bg-slate-100 rounded-2xl rotate-3 opacity-40 group-hover:-rotate-3 transition-transform duration-500"></div>
              
              <!-- Main photo container -->
              <div class="relative w-40 h-40 rounded-2xl overflow-hidden ring-2 ring-slate-200/80 group-hover:ring-slate-300 transition-all duration-300">
                <img 
                  src={item.data.photo} 
                  alt={item.data.name}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                  decoding="async"
                  onerror="this.src='/images/default-avatar.png'"
                />
                <!-- Overlay gradient on hover -->
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
            </div>
            
            <!-- Position Badge - Subtle -->
            <div class="position-badge">
              <span class="inline-flex items-center px-3 py-1 rounded-md text-xs font-medium bg-slate-100 text-slate-700 border border-slate-200/60">
                {item.data.position}
              </span>
            </div>
            
            <!-- Name -->
            <div class="name-section">
              <h4 class="font-semibold text-base text-slate-800 leading-tight">
                {item.data.name}
              </h4>
            </div>
          </div>
          
          <!-- Divider (only between items) -->
          {index < pengurusList.length - 1 && (
            <div class="divider-line mt-5">
              <div class="h-px bg-slate-100"></div>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .pengurus-container {
    animation: fadeInUp 0.5s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Smooth sticky behavior */
  .pengurus-container.sticky {
    transition: top 0.3s ease;
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .pengurus-container {
      position: static;
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 640px) {
    .pengurus-list {
      padding: 1rem;
    }
    
    .photo-wrapper .relative {
      width: 9rem;
      height: 9rem;
    }
  }
</style>
