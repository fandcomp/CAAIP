---
import LanguageSwitcher from "./LanguageSwitcher.astro";
const nav = [
  { href: '/', label: 'Beranda' },
  { href: '/profil', label: 'Profil' },
  { href: '/berita', label: 'Berita' },
  { href: '/kabar-duka', label: 'Kabar Duka' },
  { href: '/alumni', label: 'Alumni' },
];
---
<header class="sticky top-0 z-40 backdrop-blur bg-white/80 border-b border-slate-200">
  <div class="container-px mx-auto">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="flex items-center gap-3 font-semibold text-caaip-blue">
        <img src="/favicon.svg" alt="CAAIP" class="h-8 w-8" />
        <span>CAAIP</span>
      </a>
      <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
        {nav.map((item) => (
          <a class="hover:text-caaip-blue" href={item.href}>{item.label}</a>
        ))}
      </nav>
      <div class="flex items-center gap-3">
        <LanguageSwitcher />
      </div>
    </div>
  </div>
</header>
