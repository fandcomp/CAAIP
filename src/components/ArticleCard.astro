---
export interface Props {
  title: string;
  href: string;
  date?: string;
  excerpt?: string;
  cover?: string;
  author?: string;
}
const { title, href, date, excerpt, cover, author } = Astro.props as Props;
---
<article class="group border border-slate-200 rounded-lg overflow-hidden hover:shadow-lg transition-all duration-300 bg-white">
  <a href={href} class="block">
    {cover && (
      <div class="relative w-full h-48 overflow-hidden bg-slate-100">
        <img 
          src={cover} 
          alt={title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading="lazy"
          decoding="async"
          onerror="this.parentElement.style.display='none'"
        />
      </div>
    )}
    <div class="p-5">
      <h3 class="text-lg font-semibold text-slate-900 group-hover:text-caaip-blue transition-colors line-clamp-2">
        {title}
      </h3>
      {date && (
        <div class="flex items-center gap-2 text-xs text-slate-500 mt-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span>{new Date(date).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
        </div>
      )}
      {author && (
        <div class="flex items-center gap-2 text-xs text-slate-500 mt-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span>{author}</span>
        </div>
      )}
      {excerpt && (
        <p class="text-sm text-slate-600 mt-3 line-clamp-3">{excerpt}</p>
      )}
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
