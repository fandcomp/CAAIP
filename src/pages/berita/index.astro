---
import BaseLayout from "~/layouts/BaseLayout.astro";
import ArticleCard from "~/components/ArticleCard.astro";
import { getCollection } from 'astro:content';

const posts = (await getCollection('berita', ({ data }) => !data.draft))
  .sort((a, b) => Number(b.data.date) - Number(a.data.date));
---
<BaseLayout title="Berita â€” CAAIP" description="Berita resmi CAAIP">
  <section class="section container-px mx-auto">
    <h1 class="text-2xl font-bold text-caaip-blue">Berita</h1>
    <p class="mt-2 text-slate-600">Publikasi resmi dan artikel terbaru.</p>

    {posts.length === 0 ? (
      <p class="mt-6 text-slate-600">Belum ada berita. Nantikan pembaruan.</p>
    ) : (
      <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {posts.map((p) => (
          <ArticleCard title={p.data.title} date={p.data.date.toISOString()} href={`/berita/${p.slug}/`} excerpt={p.data.excerpt} />
        ))}
      </div>
    )}
  </section>
</BaseLayout>
