---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('berita', ({ data }) => !data.draft);
  return posts.map((p) => ({ params: { slug: p.slug }, props: { post: p } }));
}

const { post } = Astro.props as { post: any };
const { Content } = await post.render();
---
<BaseLayout title={`${post.data.title} â€” CAAIP`} description={post.data.excerpt}>
  <article class="pb-16">
    <!-- Cover Image -->
    {post.data.cover && (
      <div class="w-full h-[400px] md:h-[500px] overflow-hidden bg-slate-100">
        <img 
          src={post.data.cover} 
          alt={post.data.title}
          class="w-full h-full object-cover"
        />
      </div>
    )}

    <!-- Article Header -->
    <div class="container-px mx-auto max-w-4xl">
      <div class="mt-8 mb-6">
        <div class="flex flex-wrap items-center gap-4 text-sm text-slate-600 mb-4">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <time datetime={post.data.date.toISOString()}>
              {new Date(post.data.date).toLocaleDateString('id-ID', { 
                weekday: 'long',
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
          </div>
          {post.data.author && (
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <span>{post.data.author}</span>
            </div>
          )}
        </div>
        
        <h1 class="text-3xl md:text-4xl font-bold text-slate-900 leading-tight">
          {post.data.title}
        </h1>
        
        {post.data.excerpt && (
          <p class="text-lg text-slate-600 mt-4 leading-relaxed">
            {post.data.excerpt}
          </p>
        )}

        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-4">
            {post.data.tags.map((tag: string) => (
              <span class="px-3 py-1 bg-caaip-blue/10 text-caaip-blue text-sm rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </div>

      <!-- Article Content -->
      <div class="prose prose-slate prose-lg max-w-none">
        <Content />
      </div>

      <!-- Back Link -->
      <div class="mt-12 pt-8 border-t">
        <a 
          href="/berita" 
          class="inline-flex items-center gap-2 text-caaip-blue hover:underline font-medium"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Kembali ke Berita
        </a>
      </div>
    </div>
  </article>
</BaseLayout>
