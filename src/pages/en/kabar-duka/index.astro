---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';
import ArticleCard from "~/components/ArticleCard.astro";
import Pagination from "~/components/Pagination.astro";
import { useTranslations } from "~/i18n/utils";

const t = useTranslations('en');

// Get all kabar duka (obituaries) that are not drafts and in English
const allKabarDuka = await getCollection('kabarDuka', ({ data }) => {
  return !data.draft && data.lang === 'en';
});

// Sort by date (newest first)
const kabarDuka = allKabarDuka.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Pagination
const ITEMS_PER_PAGE = 9;
const currentPage = 1;
const totalPages = Math.ceil(kabarDuka.length / ITEMS_PER_PAGE);
const paginatedKabarDuka = kabarDuka.slice(
  (currentPage - 1) * ITEMS_PER_PAGE,
  currentPage * ITEMS_PER_PAGE
);
---
<BaseLayout title="In Memoriam â€” CAAIP" description="Tributes and obituaries for CAAIP members" lang="en">
  <div class="container-px mx-auto py-16">
    <!-- Page Header -->
    <div class="max-w-4xl mx-auto text-center mb-12">
      <div class="inline-flex items-center gap-2 bg-slate-100 px-4 py-2 rounded-full mb-4">
        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.53 2.53 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z"></path>
        </svg>
        <span class="text-slate-600 font-medium">In Memoriam</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4">
        In Loving Memory
      </h1>
      <p class="text-xl text-slate-600 max-w-2xl mx-auto">
        Honoring the lives and contributions of our beloved members who have passed away
      </p>
    </div>

    {kabarDuka.length === 0 ? (
      <div class="max-w-2xl mx-auto">
        <div class="bg-slate-50 border border-slate-200 rounded-lg p-12 text-center">
          <svg class="w-16 h-16 text-slate-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <p class="text-slate-600 text-lg">No obituaries available yet</p>
        </div>
      </div>
    ) : (
      <>
        <!-- Articles Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {paginatedKabarDuka.map((item) => (
            <ArticleCard
              title={item.data.title}
              excerpt={item.data.excerpt}
              date={item.data.date}
              author={item.data.author}
              slug={`/en/kabar-duka/${item.slug}`}
              cover={item.data.cover}
            />
          ))}
        </div>

        <!-- Pagination -->
        {totalPages > 1 && (
          <Pagination 
            currentPage={currentPage} 
            totalPages={totalPages}
            basePath="/en/kabar-duka"
          />
        )}
      </>
    )}

    <!-- Info Box -->
    <div class="mt-12 max-w-4xl mx-auto bg-gradient-to-br from-slate-800 to-slate-900 rounded-lg shadow-lg p-8 text-white">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-2">Support and Condolences</h3>
          <p class="text-slate-300 leading-relaxed">
            If you have information about the passing of a CAAIP member or would like to share memories, 
            please contact the administration. May they rest in peace.
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
