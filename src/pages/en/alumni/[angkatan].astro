---
import BaseLayout from "~/layouts/BaseLayout.astro";
import { getCollection } from 'astro:content';
import { useTranslations } from "~/i18n/utils";

const t = useTranslations('en');

export async function getStaticPaths() {
  const alumni = await getCollection('alumni');
  return alumni.map((item) => ({
    params: { angkatan: item.id },
    props: { alumni: item },
  }));
}

const { alumni } = Astro.props as { alumni: any };
const tahun = alumni.id;
const data = alumni.data.csvData || [];
---
<BaseLayout title={`Class of ${tahun} Alumni â€” CAAIP`} description={`List of Air Navigation Academy Alumni Class of ${tahun}`} lang="en">
  <div class="container-px mx-auto py-16">
    <!-- Page Header -->
    <div class="mb-8">
      <a 
        href="/en/alumni" 
        class="inline-flex items-center gap-2 text-caaip-blue hover:underline mb-4"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Alumni
      </a>
      
      <div class="flex items-center gap-4 flex-wrap">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900">
          Class of {tahun}
        </h1>
        <span class="px-4 py-2 bg-caaip-blue text-white rounded-full font-semibold">
          {data.length} {data.length === 1 ? 'Alumnus' : 'Alumni'}
        </span>
      </div>
    </div>

    {data.length === 0 ? (
      <div class="bg-slate-50 border border-slate-200 rounded-lg p-12 text-center">
        <svg class="w-16 h-16 text-slate-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        <p class="text-slate-600 text-lg">No alumni data available for this year</p>
      </div>
    ) : (
      <>
        <!-- Desktop: Table View -->
        <div class="hidden md:block bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-gradient-to-r from-caaip-blue to-blue-700 text-white">
                <tr>
                  <th class="px-6 py-4 text-left text-sm font-bold uppercase tracking-wider">No</th>
                  <th class="px-6 py-4 text-left text-sm font-bold uppercase tracking-wider">Name</th>
                  <th class="px-6 py-4 text-left text-sm font-bold uppercase tracking-wider">Program</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-200">
                {data.map((item: any, index: number) => (
                  <tr class="hover:bg-slate-50 transition-colors">
                    <td class="px-6 py-4 text-sm text-slate-600 font-medium">{index + 1}</td>
                    <td class="px-6 py-4 text-slate-900 font-semibold">{item.name}</td>
                    <td class="px-6 py-4 text-slate-700">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                        {item.program}
                      </span>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>

        <!-- Mobile: Card View -->
        <div class="md:hidden space-y-4">
          {data.map((item: any, index: number) => (
            <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-caaip-blue">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-caaip-blue text-white rounded-full flex items-center justify-center font-bold">
                  {index + 1}
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-slate-900 mb-2">{item.name}</h3>
                  <div class="inline-flex items-center gap-2 px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    {item.program}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </>
    )}

    <!-- Info Box -->
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
      <div class="flex items-start gap-3">
        <svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-slate-700 text-sm leading-relaxed">
          If you are a Class of {tahun} alumnus and your name is not listed here, 
          please contact the CAAIP administration to update your data.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
