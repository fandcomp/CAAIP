---
export interface Props {
  title?: string;
  description?: string;
  lang?: string;
}
const { title = 'CAAIP', description = 'Portal resmi CAAIP', lang = 'id' } = Astro.props as Props;
import Navbar from "~/components/Navbar.astro";
import Footer from "~/components/Footer.astro";
import '~/styles/global.css';
---
<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/caaip.png" type="image/png" />
    <link rel="apple-touch-icon" href="/caaip.png" />
    <title>{title}</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Load Netlify Identity widget asynchronously to avoid blocking page load -->
    <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script>
      // Redirect Identity tokens to admin page (non-blocking, deferred execution)
      if (typeof window !== 'undefined') {
        setTimeout(function() {
          try {
            var h = window.location.hash || '';
            if (h && (h.indexOf('recovery_token') >= 0 || h.indexOf('confirmation_token') >= 0 || h.indexOf('invite_token') >= 0)) {
              if (window.location.pathname !== '/admin/' && window.location.pathname !== '/admin') {
                window.location.replace('/admin/' + h);
              }
            }
          } catch (e) {}
        }, 100);
      }
    </script>
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-white text-slate-900">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-caaip-blue text-white px-3 py-2 rounded">Loncat ke konten</a>
    <Navbar />
    <main id="main" class="flex-1">
      <slot />
    </main>
    <Footer />
    <!-- Bootstrap 5 JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
