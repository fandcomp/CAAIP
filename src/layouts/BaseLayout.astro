---
export interface Props {
  title?: string;
  description?: string;
  lang?: string;
}
const { title = 'CAAIP', description = 'Portal resmi CAAIP', lang = 'id' } = Astro.props as Props;
import Navbar from "~/components/Navbar.astro";
import Footer from "~/components/Footer.astro";
import '~/styles/global.css';
---
<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/caaip.png" type="image/png" />
    <link rel="apple-touch-icon" href="/caaip.png" />
    <title>{title}</title>
    <!-- Load Netlify Identity widget asynchronously to avoid blocking page load -->
    <script async src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script is:inline>
      // Redirect Identity tokens to admin page (runs after widget loads)
      window.addEventListener('load', function() {
        try {
          var h = window.location.hash || '';
          if (h && (h.indexOf('recovery_token') >= 0 || h.indexOf('confirmation_token') >= 0 || h.indexOf('invite_token') >= 0)) {
            if (window.location.pathname !== '/admin/' && window.location.pathname !== '/admin') {
              window.location.replace('/admin/' + h);
            }
          }
        } catch (e) {}
      });
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-slate-900">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-caaip-blue text-white px-3 py-2 rounded">Loncat ke konten</a>
    <Navbar />
    <main id="main" class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
